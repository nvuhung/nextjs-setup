{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./next",
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom", "es2017"]
  },
  "include": ["src/**/*"]
}
